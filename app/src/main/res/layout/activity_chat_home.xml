<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatHomeActivity"
    android:orientation="vertical"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/eyeball">

        <SearchView
            android:id="@+id/search_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/search_bar_background"


            />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filters"
                    app:cornerRadius="5dp"
                    android:layout_margin="5dp"
                    app:icon="@drawable/filter"
                    app:iconGravity="textEnd"
                    android:textColor="@color/eyeball"
                    app:iconTint="@color/eyeball"
                    android:backgroundTint="@color/chocolate"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/company_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/chocolate"
                    app:cornerRadius="5dp"
                    android:layout_margin="5dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/batch_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/chocolate"
                    app:cornerRadius="5dp"
                    android:layout_margin="5dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/school_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/chocolate"
                    app:cornerRadius="5dp"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/location_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/chocolate"
                    app:cornerRadius="5dp"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/skill_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skill"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/chocolate"
                    app:cornerRadius="5dp"
                    android:layout_margin="5dp"
                    />


            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/user_list_layout"
        android:background="@color/eyeball"
        />

</LinearLayout>


